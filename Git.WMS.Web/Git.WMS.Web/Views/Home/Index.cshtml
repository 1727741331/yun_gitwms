    <script src="/Theme/customer/Git.Framework.UICommon.js"></script>
    <script src="/Theme/assets/plugins/uniform/jquery.uniform.min.js" type="text/javascript"></script>

    <script src="/Theme/assets/scripts/app.js"></script>
    <script src="/Theme/assets/scripts/login.js"></script>

    <script>
        jQuery(document).ready(function () {
            App.init();
            Login.init();
        });
    </script>
</body>
