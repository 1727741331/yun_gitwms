@{
    Layout = null;
}

<div class="form-horizontal">
    <br/>
    <div class="row-fluid">
        <div class="span4">
            <div class="control-group" style="margin-left: 10px;">
                <label class="control-label" for="CusNum" style="width:auto;">编号</label>
                <div class="controls" style="margin-left:5px;">
                    <input type="hidden" name="SnNum" class="span10" placeholder="" value="@ViewBag.Entity.SnNum">
                    <input type="text" name="CusNum" class="span10" placeholder="" value="@ViewBag.Entity.CusNum">
                </div>
            </div>
        </div>
        <div class="span4">
            <div class="control-group" style="margin-left: 10px; ">
                <label class="control-label" for="CusName" style="width:auto;">名称</label>
                <div class="controls" style="margin-left:5px;">
                    <input type="text" name="CusName" class="span10" placeholder="" value="@ViewBag.Entity.CusName">
                </div>
            </div>
        </div>
        <div class="span4">
            <div class="control-group" style="margin-left: 10px; ">
                <label class="control-label" for="Remark" style="width:auto;">备注</label>
                <div class="controls" style="margin-left:5px;">
                    <input type="text" name="Remark" class="span10" placeholder="" value="@ViewBag.Entity.Remark">
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span4">
            <div class="control-group" style="margin-left: 10px;">
                <label class="control-label" for="Fax" style="width:auto;">传真</label>
                <div class="controls" style="margin-left:5px;">
                    <input type="text" name="Fax" class="span10" placeholder="" value="@ViewBag.Entity.Fax">
                </div>
            </div>
        </div>
        <div class="span4">
            <div class="control-group" style="margin-left: 10px; ">
                <label class="control-label" for="Email" style="width:auto;">邮箱</label>
                <div class="controls" style="margin-left:5px;">
                    <input type="text" name="Email" class="span10" placeholder="" value="@ViewBag.Entity.Email">
                </div>
            </div>
        </div>
        <div class="span4">
            <div class="control-group" style="margin-left: 10px; ">
                <label class="control-label" for="Phone" style="width:auto;">电话</label>
                <div class="controls" style="margin-left:5px;">
                    <input type="text" name="Phone" class="span10" placeholder="" value="@ViewBag.Entity.Phone">
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-body" style="border-bottom:0px;">
                <table class="table table-striped table-bordered table-hover" id="tabDetail">
                    <thead>
                        <tr>
                            <th>联系人</th>
                             <th>电话</th>
                            <th>地址</th>
                            <th>备注</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>