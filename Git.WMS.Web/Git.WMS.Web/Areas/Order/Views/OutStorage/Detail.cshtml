@{
    Layout = null;
}

<div class="form-horizontal">
    <div class="row-fluid">
        <div class="span4">
            <div class="control-group" style="margin-bottom:auto; margin-left:10px;">
                <label class="control-label ordertitle" style="width:auto;">出库单号</label>
                <div class="controls" style="margin-left:5px;">
                    <span class="text">@ViewBag.Entity.OrderNum</span>
                </div>
            </div>
        </div>
        <div class="span4">
            <div class="control-group" style="margin-bottom: auto; margin-left: 10px;">
                <label class="control-label ordertitle" style="width:auto;">出库单类型</label>
                <div class="controls" style="margin-left:5px;">
                    <span class="text">@Html.Raw(Git.Framework.DataTypes.EnumHelper.GetEnumDesc<Git.Storage.Common.Enum.EOutType>(ViewBag.Entity.OutType))</span>
                </div>
            </div>
        </div>
        <div class="span4">
            <div class="control-group" style="margin-bottom: auto; margin-left: 10px;">
                <label class="control-label ordertitle" style="width:auto;">状态</label>
                <div class="controls" style="margin-left:5px;">
                    <span class="text">@Html.Raw(Git.Framework.DataTypes.EnumHelper.GetEnumDesc<Git.Storage.Common.Enum.EAudite>(ViewBag.Entity.Status))</span>
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span4">
            <div class="control-group" style="margin-bottom: auto; margin-left: 10px;">
                <label class="control-label ordertitle" style="width:auto;">客户编号</label>
                <div class="controls" style="margin-left:5px;">
                    <span class="text">@ViewBag.Entity.CusNum</span>
                </div>
            </div>
        </div>
        <div class="span4">
            <div class="control-group" style="margin-bottom: auto; margin-left: 10px;">
                <label class="control-label ordertitle" style="width:auto;">客户名称</label>
                <div class="controls" style="margin-left:5px;">
                    <span class="text">@ViewBag.Entity.CusName</span>
                </div>
            </div>
        </div>
        <div class="span4">
            <div class="control-group" style="margin-bottom: auto; margin-left: 10px;">
                <label class="control-label ordertitle" style="width:auto;">联系人</label>
                <div class="controls" style="margin-left:5px;">
                    <span class="text">@ViewBag.Entity.Contact</span>
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span4">
            <div class="control-group" style="margin-bottom: auto; margin-left: 10px;">
                <label class="control-label ordertitle" style="width:auto;">电话</label>
                <div class="controls" style="margin-left:5px;">
                    <span class="text">@ViewBag.Entity.Phone</span>
                </div>
            </div>
        </div>
        <div class="span4">
            <div class="control-group" style="margin-bottom: auto; margin-left: 10px;">
                <label class="control-label ordertitle" style="width:auto;">制单人</label>
                <div class="controls" style="margin-left:5px;">
                    <span class="text">@ViewBag.Entity.CreateUserName</span>
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span4">
            <div class="control-group" style="margin-bottom: auto; margin-left: 10px;">
                <label class="control-label ordertitle" style="width:auto;">送货时间</label>
                <div class="controls" style="margin-left:5px;">
                    <span class="text">@ViewBag.Entity.SendDate.ToString("yyyy-MM-dd")</span>
                </div>
            </div>
        </div>
        <div class="span8">
            <div class="control-group" style="margin-bottom: auto; margin-left: 10px;">
                <label class="control-label ordertitle" style="width:auto;">备注</label>
                <div class="controls" style="margin-left:5px;">
                    <span class="text">@ViewBag.Entity.Remark</span>
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <div class="control-group" style="margin-bottom: auto; margin-left: 10px;">
                <label class="control-label ordertitle" style="width:auto;">审核原因</label>
                <div class="controls" style="margin-left:5px;">
                    @if ((int)Git.Storage.Common.Enum.EAudite.Wait == ViewBag.Entity.Status)
                    {
                        <input type="text" name="Reason" class="span8" placeholder="">
                    }
                    else
                    { 
                        <span class="text">@ViewBag.Entity.Reason</span>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-body" style="border-bottom:0px;">
                <table class="table table-striped table-bordered table-hover" id="tabDetail">
                    <thead>
                        <tr>
                            <th>产品名称</th>
                            <th>产品编码</th>
                            <th>规格</th>
                            <th>批次</th>
                            <th>单价</th>
                            <th>出库数</th>
                            <th>总价</th>
                            <th>库位</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>