@{
    Layout = null;
    Git.Storage.Entity.Allocate.AllocateOrderEntity Entity = ViewBag.Entity;
}
@using Git.Framework.DataTypes;
@using Git.Framework.DataTypes.ExtensionMethods;

<div class="form-horizontal">
    <div class="row-fluid">
        <div class="span4">
            <div class="control-group" style="margin-bottom:auto; margin-left:10px;">
                <label class="control-label ordertitle" style="width:auto;">调拨单号</label>
                <div class="controls" style="margin-left:5px;">
                    <span class="text">@ViewBag.Entity.OrderNum</span>
                </div>
            </div>
        </div>
        <div class="span4">
            <div class="control-group" style="margin-bottom: auto; margin-left: 10px;">
                <label class="control-label ordertitle" style="width:auto;">状态</label>
                <div class="controls" style="margin-left:5px;">
                    <span class="text">@Html.Raw(Git.Framework.DataTypes.EnumHelper.GetEnumDesc<Git.Storage.Common.Enum.EAudite>(ViewBag.Entity.Status))</span>
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        
        <div class="span4">
            <div class="control-group" style="margin-bottom: auto; margin-left: 10px;">
                <label class="control-label ordertitle" style="width:auto;">关联单号</label>
                <div class="controls" style="margin-left:5px;">
                    <span class="text">@ViewBag.Entity.ContractOrder</span>
                </div>
            </div>
        </div>
        <div class="span4">
            <div class="control-group" style="margin-bottom: auto; margin-left: 10px;">
                <label class="control-label ordertitle" style="width:auto;">制单人</label>
                <div class="controls" style="margin-left:5px;">
                    <span class="text">@ViewBag.Entity.CreateUserName</span>
                </div>
            </div>
        </div>
        <div class="span4">
            <div class="control-group" style="margin-bottom: auto; margin-left: 10px;">
                <label class="control-label ordertitle" style="width:auto;">制单时间</label>
                <div class="controls" style="margin-left:5px;">
                    <span class="text">@Entity.CreateTime.To("yyyy-MM-dd")</span>
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span8">
            <div class="control-group" style="margin-bottom: auto; margin-left: 10px;">
                <label class="control-label ordertitle" style="width:auto;">备注</label>
                <div class="controls" style="margin-left:5px;">
                    <span class="text">@ViewBag.Entity.Remark</span>
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <div class="control-group" style="margin-bottom: auto; margin-left: 10px;">
                <label class="control-label ordertitle" style="width:auto;">审核原因</label>
                <div class="controls" style="margin-left:5px;">
                    <span class="text">@ViewBag.Entity.Reason</span>
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-body" style="border-bottom:0px;">
                <table class="table table-striped table-bordered table-hover" id="tabDetail">
                    <thead>
                        <tr>
                            <th>产品名称</th>
                            <th>产品编码</th>
                            <th>批次</th>
                            <th>数量</th>
                            <th>当前库位</th>
                            <th>调拨仓库</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>