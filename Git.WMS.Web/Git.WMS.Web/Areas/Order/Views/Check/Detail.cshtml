@using Git.Framework.DataTypes;
@using Git.Framework.DataTypes.ExtensionMethods;

@{
    Layout = null;

    Git.Storage.Entity.Check.InventoryOrderEntity Entity = ViewBag.Entity;
}

<div class="form-horizontal">
    <div class="row-fluid">
        <div class="span4">
            <div class="control-group" style="margin-bottom:auto; margin-left:10px;">
                <label class="control-label ordertitle" style="width:auto;">盘点单号</label>
                <div class="controls" style="margin-left:5px;">
                    <span class="text">@Entity.OrderNum</span>
                    <input type="hidden" name="SnNum" value="@Entity.SnNum"/>
                </div>
            </div>
        </div>
        <div class="span4">
            <div class="control-group" style="margin-bottom: auto; margin-left: 10px;">
                <label class="control-label ordertitle" style="width:auto;">关联单号</label>
                <div class="controls" style="margin-left:5px;">
                    <span class="text">@Entity.ContractOrder</span>
                </div>
            </div>
        </div>
        <div class="span4">
            <div class="control-group" style="margin-bottom: auto; margin-left: 10px;">
                <label class="control-label ordertitle" style="width:auto;">状态</label>
                <div class="controls" style="margin-left:5px;">
                    <input type="hidden" name="Status" value="@Entity.Status"/>
                    <input type="hidden" name="IsComplete" value="@Entity.IsComplete"/>
                    <span class="text">@Html.Raw(Git.Framework.DataTypes.EnumHelper.GetEnumDesc<Git.Storage.Common.Enum.EAudite>(Entity.Status))</span>
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span4">
            <div class="control-group" style="margin-bottom: auto; margin-left: 10px;">
                <label class="control-label ordertitle" style="width:auto;">创建人</label>
                <div class="controls" style="margin-left:5px;">
                    <span class="text">@Entity.CreateUserName</span>
                </div>
            </div>
        </div>
        <div class="span4">
            <div class="control-group" style="margin-bottom: auto; margin-left: 10px;">
                <label class="control-label ordertitle" style="width:auto;">创建时间</label>
                <div class="controls" style="margin-left:5px;">
                    <span class="text">@Entity.CreateTime.To("yyyy-MM-dd")</span>
                </div>
            </div>
        </div>
        <div class="span4">
            <div class="control-group" style="margin-bottom: auto; margin-left: 10px;">
                <label class="control-label ordertitle" style="width:auto;">备注</label>
                <div class="controls" style="margin-left:5px;">
                    <span class="text">@Entity.Remark</span>
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <div class="control-group" style="margin-bottom: auto; margin-left: 10px;">
                <label class="control-label ordertitle" style="width:auto;">审核原因</label>
                <div class="controls" style="margin-left:5px;">
                    <span class="text">@ViewBag.Entity.Reason</span>
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-body" style="border-bottom:0px;">
                <table class="table table-striped table-bordered table-hover" id="tabDetail">
                    <thead>
                        <tr>
                            <th>产品名称</th>
                            <th>产品编码</th>
                            <th>规格</th>
                            <th>批次</th>
                            <th>库位</th>
                            <th>账面数</th>
                            <th>盘点数</th>
                            <th>盘差数</th>
                        </tr>
                    </thead>
                </table>
                <div id="mypager" class="row-fluid" style="vertical-align:top;">

                </div>
            </div>
        </div>
    </div>
</div>