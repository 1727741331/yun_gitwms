@using Git.Framework.DataTypes;
@using Git.Framework.DataTypes.ExtensionMethods;

@{
    Layout = null;
    Git.Storage.Entity.Check.InventoryOrderEntity Entity = ViewBag.Entity;
}


<!DOCTYPE html>
<!--[if IE 8]> <html lang="en" class="ie8"> <![endif]-->
<!--[if IE 9]> <html lang="en" class="ie9"> <![endif]-->
<!--[if !IE]><!-->
<html lang="en">
<!--<![endif]-->
<!-- BEGIN HEAD -->
<head>
    @Html.Partial("_PageTitle")
</head>
<body class="fixed-top">

    @Html.Partial("_Header")

    <div id="container" class="row-fluid @ViewBag.MenuStatus">
        @Html.Partial("_Sidebar")

        <div id="body">
            <div id="widget-config" class="modal hide">
                <div class="modal-header">
                    <button data-dismiss="modal" class="close" type="button">×</button>
                    <h3>Widget Settings</h3>
                </div>
                <div class="modal-body">
                    <p>Here will be a configuration form</p>
                </div>
            </div>
            <div class="container-fluid">
                <div class="row-fluid">
                    <div class="span12">
                        @Html.Raw(ViewBag.NavMenu)
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span12">
                        <div class="widget box light-grey">
                            <div class="widget-title">
                                <h4><i class="icon-globe"></i>新增盘点单</h4>
                            </div>
                            <div class="widget-body">
                                <div class="horizontal-form">
                                    <div class="row-fluid">
                                        <div class="span3">
                                            <div class="control-group">
                                                <label class="control-label" for="OrderNum">盘点单号</label>
                                                <div class="controls">
                                                    <input type="text" name="OrderNum" class="span12" placeholder="可不填,自动生成" disabled="disabled" value="@Entity.OrderNum">
                                                    <input type="hidden" name="SnNum" value="@Entity.SnNum" />
                                                    <input type="hidden" name="Status" value="@Entity.Status"/>
                                                    <span class="help-block"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="span3">
                                            <div class="control-group">
                                                <label class="control-label" for="ContractOrder">关联订单号</label>
                                                <div class="controls">
                                                    <input type="text" name="ContractOrder" class="span12" placeholder="" disabled="disabled" value="@Entity.ContractOrder">
                                                    <span class="help-block"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="span3">
                                            <div class="control-group">
                                                <label class="control-label" for="CreateTime">制单日期</label>
                                                <div class="controls">
                                                    <input type="text" name="CreateTime" class="span12" placeholder="" disabled="disabled" onfocus="WdatePicker({dateFmt:'yyyy-MM-dd'})" value="@Entity.CreateTime.To("yyyy-MM-dd")">
                                                    <span class="help-block"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="span3">
                                            <div class="control-group">
                                                <label class="control-label" for="CreateUserName">制单人</label>
                                                <div class="controls">
                                                    <input type="text" name="CreateUserName" class="span12" placeholder="" disabled="disabled" value="@Entity.CreateUserName">
                                                    <input type="hidden" name="CreateUser" class="span12" placeholder="" value="@Entity.CreateUser">
                                                    <span class="help-block"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span12">
                                            <div class="control-group">
                                                <label class="control-label" for="Remark">备注</label>
                                                <div class="controls">
                                                    <input type="text" name="Remark" class="span12" placeholder="" disabled="disabled" value="@Entity.Remark">
                                                    <span class="help-block"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                                <table class="table table-striped table-bordered table-hover" id="tabList">
                                    <thead>
                                        <tr>
                                            <th>产品名称</th>
                                            <th>产品编码</th>
                                            <th>规格</th>
                                            <th>批次</th>
                                            <th>库位</th>
                                            <th>账面数</th>
                                            <th>盘点数</th>
                                            <th>操作</th>
                                        </tr>
                                    </thead>
                                </table>

                                <div id="mypager" class="row-fluid" style="vertical-align:top;">

                                </div>


                                <div class="form-actions formbtn">
                                    <button type="submit" class="btn btn-danger" data-command="Add"><i class="icon-plus"></i>新增</button>
                                    <button type="submit" class="btn btn-primary" data-command="Save"><i class="icon-ok"></i>完成</button>
                                    <button type="button" class="btn" data-command="Cancel">取消</button>
                                    <input type="hidden" name="Location" value="@ViewBag.LocationStr"/>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("_Foot")

    <script src="/Theme/customer/Order/Git.Framework.Check.js"></script>
    <script type="text/javascript">
        jQuery(document).ready(function () {
            App.init();
            CheckUpload.Init();
        });
    </script>
</body>
</html>