@{
    Layout = null;
}

<!DOCTYPE html>
<!--[if IE 8]> <html lang="en" class="ie8"> <![endif]-->
<!--[if IE 9]> <html lang="en" class="ie9"> <![endif]-->
<!--[if !IE]><!-->
<html lang="en">
<!--<![endif]-->
<!-- BEGIN HEAD -->
<head>
    @Html.Partial("_PageTitle")
</head>
<body class="fixed-top">

    @Html.Partial("_Header")

    <div id="container" class="row-fluid @ViewBag.MenuStatus">
        @Html.Partial("_Sidebar")

        <div id="body">
            <div id="widget-config" class="modal hide">
                <div class="modal-header">
                    <button data-dismiss="modal" class="close" type="button">×</button>
                    <h3>Widget Settings</h3>
                </div>
                <div class="modal-body">
                    <p>Here will be a configuration form</p>
                </div>
            </div>
            <div class="container-fluid">
                <div class="row-fluid">
                    <div class="span12">
                        @Html.Raw(ViewBag.NavMenu)
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span12">
                        <div class="widget box light-grey">
                            <div class="widget-title">
                                <h4><i class="icon-globe"></i>财务记账</h4>
                                <div class="actions toolbar pull-right">
                                    <a class="btn btn-danger" href="javascript:void(0)" data-command="Refresh"><i class="icon-refresh"></i>&nbsp;刷新</a>
                                    <a class="btn btn-info" href="javascript:void(0)" data-command="Excel"><i class="icon-download"></i>&nbsp;导出</a>
                                </div>
                            </div>
                            <div class="widget-body">
                                <div class="row-fluid">
                                    <form class="form-horizontal" action="javascript:void(0)">
                                        <div class="control-group">
                                            <div data-condition="search">
                                                流水号<input type="text" name="BillNum" class="input-medium" placeholder="请输入流水号" />
                                                类别:<select class="input-medium" name="CateNum">@Html.Raw(ViewBag.CateList)</select>
                                                <a class="btn btn-info" href="javascript:void(0)" data-command="search"><i class="icon-search"></i>&nbsp;搜索</a>
                                                <button class="btn btn-primary " data-command="Advanced">高级搜索<span class="caret"></span></button>
                                                <button class="btn btn-success " data-command="Clear"><i class="icon-random"></i>&nbsp;清空搜索条件</button>
                                            </div>
                                        </div>
                                    </form>
                                    <div class="form-horizontal form-actions formsearch" style="display:none;">
                                        <div class="control-group formsearch">
                                            <div data-condition="search">
                                                名称:<input type="text" name="Title" class="input-medium" placeholder="请输入名称" />
                                                关联单号:<input type="text" name="ContractNum" class="input-medium" placeholder="请输入关联单号" />
                                                起始时间:<input type="text" name="BeginTime" class="input-medium" placeholder="" onfocus="WdatePicker({dateFmt:'yyyy-MM-dd'})" />-
                                                <input type="text" name="EndTime" class="input-medium" placeholder="" onfocus="WdatePicker({dateFmt:'yyyy-MM-dd'})" />
                                                <a class="btn btn-info" href="javascript:void(0)" data-command="search"><i class="icon-search"></i>&nbsp;搜索</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row-fluid" id="tabList"></div>
                                <div id="mypager" class="row-fluid" style="vertical-align:top;"></div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("_Foot")
    <script src="/Theme/customer/Finance/Git.Framework.Record.js"></script>
    <script>
        jQuery(document).ready(function () {
            App.init();
            FinanceRecordManager.ToolBar();
        });
    </script>
</body>
</html>