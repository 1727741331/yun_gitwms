@{
    Layout = null;
}

<!DOCTYPE html>
<!--[if IE 8]> <html lang="en" class="ie8"> <![endif]-->
<!--[if IE 9]> <html lang="en" class="ie9"> <![endif]-->
<!--[if !IE]><!-->
<html lang="en">
<!--<![endif]-->
<!-- BEGIN HEAD -->
<head>
    @Html.Partial("_PageTitle")
</head>
<body class="fixed-top">

    @Html.Partial("_Header")

    <div id="container" class="row-fluid @ViewBag.MenuStatus">
        @Html.Partial("_Sidebar")

        <div id="body">
            <div id="widget-config" class="modal hide">
                <div class="modal-header">
                    <button data-dismiss="modal" class="close" type="button">×</button>
                    <h3>Widget Settings</h3>
                </div>
                <div class="modal-body">
                    <p>Here will be a configuration form</p>
                </div>
            </div>
            <div class="container-fluid">
                <div class="row-fluid">
                    <div class="span12">
                        @Html.Raw(ViewBag.NavMenu)
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span12">
                        <div class="widget box light-grey">
                            <div class="widget-title">
                                <h4><i class="icon-globe"></i>新增报表</h4>
                            </div>
                            <div class="widget-body">
                                <div class="horizontal-form">
                                    <div class="row-fluid">
                                        <div class="span3">
                                            <div class="control-group">
                                                <label class="control-label" for="ReportNum">报表编号</label>
                                                <div class="controls">
                                                    <input type="text" name="ReportNum" class="span12" placeholder="可不填,自动生成" disabled="disabled" value="@ViewBag.Entity.ReportNum" />
                                                    <input type="hidden" name="SnNum" value="@ViewBag.Entity.SnNum"/>
                                                    <span class="help-block"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="span3">
                                            <div class="control-group">
                                                <label class="control-label" for="ReportName">报表名称</label>
                                                <div class="controls">
                                                    <input type="text" name="ReportName" class="span12" placeholder="请输入报表名称" value="@ViewBag.Entity.ReportName"/>
                                                    <span class="help-block"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="span3">
                                            <div class="control-group">
                                                <label class="control-label" for="ReportType">报表类型</label>
                                                <div class="controls">
                                                    <select name="ReportType" class="span12">
                                                        @Html.Raw(ViewBag.ReportType)
                                                    </select>
                                                    <span class="help-block"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="span3">
                                            <div class="control-group">
                                                <label class="control-label" for="Remark">备注</label>
                                                <div class="controls">
                                                    <input type="text" name="Remark" class="span12" placeholder="" value="@ViewBag.Entity.Remark"/>
                                                    <span class="help-block"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span3">
                                            <div class="control-group">
                                                <label class="control-label" for="DsType">数据源类型</label>
                                                <div class="controls">
                                                    <select name="DsType" class="span12">
                                                        @Html.Raw(ViewBag.DataSourceType)
                                                    </select>
                                                    <span class="help-block"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="span9">
                                            <div class="control-group">
                                                <label class="control-label" for="DataSource">数据源</label>
                                                <div class="controls">
                                                    <input type="text" name="DataSource" class="span12" placeholder="输入存储过程请回车加载参数"  value="@ViewBag.Entity.DataSource"/>
                                                    <span class="help-block"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span6">
                                            <div class="control-group">
                                                <label class="control-label" for="FileName">报表文件</label>
                                                <div class="controls">
                                                    <input type="text" name="FileName" class="span12" placeholder="" disabled="disabled" value="@ViewBag.Entity.FileName"/>
                                                    <span class="help-block"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <table class="table table-striped table-bordered table-hover" id="tabList">
                                    <thead>
                                        <tr>
                                            <th>&nbsp;</th>
                                            <th>参数名</th>
                                            <th>显示名</th>
                                            <th>数据类型</th>
                                            <th>可选值</th>
                                            <th>默认值</th>
                                            <th>显示元素</th>
                                            <th>备注</th>
                                            <th>操作</th>
                                        </tr>
                                    </thead>
                                </table>

                                <div id="mypager" class="row-fluid" style="vertical-align:top;">

                                </div>

                                <div class="form-actions formbtn">
                                    <button type="button" class="btn btn-danger" data-command="Upload" id="btnUpload"><i class="icon-eye-open"></i>上传报表格式</button>
                                    <button type="button" class="btn btn-primary" data-command="AddParam"><i class="icon-eye-open"></i>新增参数</button>
                                    <button type="button" class="btn btn-primary" data-command="Save"><i class="icon-save"></i>保存</button>
                                    <button type="button" class="btn" data-command="Cancel"><i class="icon-ok"></i>取消</button>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("_Foot")
    <script src="/Theme/assets/plugins/jquery.jUploader-1.01.min.js"></script>
    <script src="/Theme/customer/Report/Git.Framework.Report.Customer.js"></script>
    <script type="text/javascript">
        jQuery(document).ready(function () {
            App.init();
            ReportEdit.Init();
        });
    </script>
</body>
</html>